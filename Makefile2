CC=gcc
CFLAGS=-Wall -g -std=c99
SRCS=parser.c shell.c
OBJS=$(SRCS:.c=.o)
MAIN=shell
RM=rm


all: $(MAIN) simple1 simple2

$(MAIN): $(OBJS)
	$(CC) $(CFLAGS) -o $(MAIN) $(OBJS)

.c.o:
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(MAIN) *.o simple1 simple2

run:
	./$(MAIN)

simple1:
	$(CC) $(CFLAGS) simple1.c -o simple1

simple2:
	$(CC) $(CFLAGS) simple2.c -o simple2
